<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Aplicación Mapa</title>

  <link rel="stylesheet" href="bootstrap.min.css">
  <link rel="stylesheet" href="leaflet.css">
  <link rel="stylesheet" href="sweetalert2.min.css">
  <script src="/javascripts/script.js"></script>

  <style>
    #map {
      height: 700px;
      width: 100%;
    }

    .dataTables_empty {
      text-align: center !important;
      font-weight: bold;
      color: #666;
    }

    .dataTables_filter {
      float: right !important;
      text-align: right;
    }
  </style>
</head>


<body>

  <%- include('partials/header') %>

    <div class="container mt-4">


      <!-- MAPA -->
      <div class="bg-light bg-gradient px-4 pb-4">
        <h2 class="text-center fw-light">Mapa de Ejemplo</h2>
        <div id="map" class="mt-4 mb-4"></div>
      </div>
      <!-- TABLA DE PUNTOS DE INTERÉS -->
      <table id="tablaPuntos" class="table table-striped table-bordered mt-4" style="width:100%">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Ubicación</th>
            <th>Descripción</th>
            <th>Tipo de Punto</th>
            <th>Imagen</th>
            <th>Coordenadas</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td>Madrid, España</td>
            <td>Plaza Mayor, punto turístico popular.</td>
            <td>Turístico</td>
            <td><img src="https://img.icons8.com/?size=20&id=6AGHyLA8bTw4&format=png&color=000000" alt="Plaza Mayor">
            </td>
            <td>40.4154, -3.7074</td>
            <td>
              <button class="btn btn-primary btn-sm">Editar</button>
              <button class="btn btn-danger btn-sm">Eliminar</button>
            </td>
          </tr>
          <tr>
            <td>2</td>
            <td>Barcelona, España</td>
            <td>Parque Güell, obra de Gaudí.</td>
            <td>Cultural</td>
            <td><img src="https://img.icons8.com/?size=20&id=6AGHyLA8bTw4&format=png&color=000000" alt="Parque Güell">
            </td>
            <td>41.4145, 2.1527</td>
            <td>
              <button class="btn btn-primary btn-sm">Editar</button>
              <button class="btn btn-danger btn-sm">Eliminar</button>
            </td>
          </tr>
          <tr>
            <td>3</td>
            <td>Sevilla, España</td>
            <td>Real Alcázar, palacio histórico.</td>
            <td>Histórico</td>
            <td><img src="https://img.icons8.com/?size=20&id=6AGHyLA8bTw4&format=png&color=000000" alt="Real Alcázar">
            </td>
            <td>37.3833, -5.9900</td>
            <td>
              <button class="btn btn-primary btn-sm">Editar</button>
              <button class="btn btn-danger btn-sm">Eliminar</button>
            </td>
          </tr>
          <tr>
            <td>4</td>
            <td>Valencia, España</td>
            <td>Ciudad de las Artes y las Ciencias.</td>
            <td>Modernidad</td>
            <td><img src="https://img.icons8.com/?size=20&id=6AGHyLA8bTw4&format=png&color=000000"
                alt="Ciudad de las Artes"></td>
            <td>39.4553, -0.3562</td>
            <td>
              <button class="btn btn-primary btn-sm">Editar</button>
              <button class="btn btn-danger btn-sm">Eliminar</button>
            </td>
          </tr>
          <tr>
            <td>5</td>
            <td>Granada, España</td>
            <td>La Alhambra, monumento icónico.</td>
            <td>Histórico</td>
            <td><img src="https://img.icons8.com/?size=20&id=6AGHyLA8bTw4&format=png&color=000000" alt="La Alhambra">
            </td>
            <td>37.1761, -3.5881</td>
            <td>
              <button class="btn btn-primary btn-sm">Editar</button>
              <button class="btn btn-danger btn-sm">Eliminar</button>
            </td>
          </tr>
        </tbody>
      </table>

    </div>

    <%- include('partials/footer')%>


      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <script src="bootstrap.min.js"></script>
      <script src="leaflet.js"></script>
      <script src="sweetalert2.min.js"></script>
      <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
      <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>


</body>

</html>